    <script type="text/javascript">
        $(document).ready(function () {
            $(document).tooltip({
                content: "ИМЕ",
                tooltipClass: "ui-tooltip arrow arrow.top arrow.left arrow.right arrow:after arrow.top:after",
            });
            $("#effect").on("change", function() {
                var selectedOption = $(this).val();
                $(document).tooltip("option", "show", { effect: selectedOption, duration: 250 });
                $(document).tooltip("option", "hide", { effect: selectedOption, duration: 250 });
            });
        })

    </script>
    <style>
        .ui-tooltip, .arrow:after {
            background: black;
            border: 2px solid white;
        }
