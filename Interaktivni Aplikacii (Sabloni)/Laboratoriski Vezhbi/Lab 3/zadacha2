    <script type="text/javascript">
        $(document).ready(function() {
            $('.title').click(function () {
                $('.text').slideUp('slow');
                $(this).next('.text').slideToggle('slow');
                $('.title').removeClass('plus');
                $(this).addClass('plus');

            });

            $('.menu li').click(function () {
                var res = "";
                var als = $(this).text();
                for (var i = 0; i < 10; i++) {
                    res += i + als;
                }

                $('#main-desc span i').text(res);
            });
        });
    </script>
