        $(document).ready(function () {
            $("button").hide();
            $(".title").hover(function () {
                $(this).find("button").show();
            }, function () {
                $(this).find("button").hide();
            })
            $("#backHome").hover(function () {
                $("a").addClass("sminka");
            }, function () {
                $("a").removeClass("sminka");
            })
        })
    </script>
