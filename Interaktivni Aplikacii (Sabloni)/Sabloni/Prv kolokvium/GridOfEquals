        $(document).ready(function () {
            $("span").hide();

            $("div div").hover(function () {
                $(this).find("span").show();
                $(this).find("p").hide();
            }, function () {
                $(this).find("span").hide();
                $(this).find("p").show();
            });
        })
    </script>
