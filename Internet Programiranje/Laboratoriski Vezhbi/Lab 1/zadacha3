    <h1 id="najdolgPodstring"></h1>
    <script type="text/javascript">

        let result = document.getElementById("najdolgPodstring");
        let a = prompt("Vnesete string(rechenica)");
        let najdolg = '';
        a.split(" ").forEach(n => n.length > najdolg.length ? najdolg = n : ' ');
        result.innerHTML = najdolg;

    </script>
