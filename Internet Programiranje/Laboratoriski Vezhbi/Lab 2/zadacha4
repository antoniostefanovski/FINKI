    <script type="text/javascript">

        function addComplex() {

            let num1R = document.getElementById("firstOfComplex1");
            let num1I = document.getElementById("secondOfComplex1");
            let num2R = document.getElementById("firstOfComplex2");
            let num2I = document.getElementById("secondOfComplex2");
            let rezR = document.getElementById("rezR");
            let rezI = document.getElementById("rezI");
            rezR.value = parseInt(num1R.value) + parseInt(num2R.value);
            rezI.value = parseInt(num1I.value) + parseInt(num2I.value);

        }


    </script>
</head>
